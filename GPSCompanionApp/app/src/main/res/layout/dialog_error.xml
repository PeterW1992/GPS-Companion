<?xml version="1.0" encoding="utf-8"?> <!-- Error dialog layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@color/lightGrey">

    <TextView android:id="@+id/lbl_errorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/lbl_errorContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <Button android:id="@+id/btn_closeErrorDialog"
        android:text="@string/btn_cancel"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>